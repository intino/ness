def type(arff)
	@RELATION relation

	$attribute...[$NL]

	@DATA

end

def trigger(attribute)
	@ATTRIBUTE $name $type
end

def type(Nominal) trigger(type)
	{$value+quoted...[,]}
end

def type(Date) trigger(type)
	DATE "$format"
end

def type(Numeric) trigger(type)
	NUMERIC
end

def type(String) trigger(type)
	string
end


def trigger(quoted)
	"$value"
end